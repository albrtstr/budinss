<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg_main">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp">
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.9"
            android:background="@drawable/comp_back_button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln2"
        android:layout_toEndOf="@id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/title_kompetensi_inti">
        </ImageView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KI 1"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginEnd="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_kompetensi_inti1"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:justificationMode="inter_word">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KI 2"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginEnd="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_kompetensi_inti2"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:justificationMode="inter_word">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KI 3"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginEnd="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_kompetensi_inti3"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:justificationMode="inter_word">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KI 4"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_marginEnd="15dp">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_kompetensi_inti4"
                android:fontFamily="@font/segoeui"
                android:textColor="#000000"
                android:textSize="18sp"
                android:justificationMode="inter_word">
            </TextView>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>