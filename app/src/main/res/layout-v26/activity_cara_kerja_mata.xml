<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckg_semua_budin">

    <LinearLayout
        android:id="@+id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp">
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.5"
            android:scaleY="0.9"
            android:background="@drawable/comp_back_button">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ln2"
        android:layout_toEndOf="@id/ln1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_cara_kerja_mata"
            android:fontFamily="@font/agencyr"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:textSize="35sp">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ln2"
        android:layout_marginTop="9dp"
        android:paddingEnd="18dp"
        android:layout_marginStart="67dp">
        <Button
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home_button"
            android:scaleX="1">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/ln2">


        <ImageView
            android:layout_width="240dp"
            android:layout_height="310dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/content_image_cara_mata"
            android:contentDescription="TODO">
        </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp">
    <LinearLayout
        android:id="@+id/ln_text_1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nomor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:justificationMode="inter_word"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/segoeui"
            android:justificationMode="inter_word"
            android:text="@string/content_text_mata_1"
            android:textColor="#FFFFFF"
            android:textSize="15sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_text_2"
        android:layout_below="@id/ln_text_1"
        android:layout_width="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nomor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2."
            android:justificationMode="inter_word"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/segoeui"
            android:justificationMode="inter_word"
            android:text="@string/content_text_mata_2"
            android:textColor="#FFFFFF"
            android:textSize="15sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_text_3"
        android:layout_below="@id/ln_text_2"
        android:layout_width="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nomor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3."
            android:justificationMode="inter_word"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/segoeui"
            android:justificationMode="inter_word"
            android:text="@string/content_text_mata_3"
            android:textColor="#FFFFFF"
            android:textSize="15sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_text_4"
        android:layout_below="@id/ln_text_3"
        android:layout_width="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/nomor4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4."
            android:justificationMode="inter_word"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="4dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:fontFamily="@font/segoeui"
            android:justificationMode="inter_word"
            android:text="@string/content_text_mata_4"
            android:textColor="#FFFFFF"
            android:textSize="15sp">
        </TextView>
    </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_text_5"
                android:layout_below="@id/ln_text_4"
                android:layout_width="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nomor5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5."
                    android:justificationMode="inter_word"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="4dp">
                </TextView>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:fontFamily="@font/segoeui"
                android:justificationMode="inter_word"
                android:text="@string/content_text_mata_5"
                android:textColor="#FFFFFF"
                android:textSize="15sp">
                    </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>